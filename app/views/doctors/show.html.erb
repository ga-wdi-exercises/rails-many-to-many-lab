<h1>Appointments for Dr. <%= @doctor.name %><br/><%= link_to "(Add Appointment +)", new_appointment_path%></h1>
<% @appointments.each do |appointment|%>
<p>Name: <%=link_to appointment.patient.name, patient_path(appointment.patient.id)%></p>
<p>Date: <%=appointment.date%></p>
<p>Time: <%=appointment.time%></p>
<p>Notes: <%=appointment.notes%></p>
<%= link_to "Edit Appointment", edit_appointment_path(appointment)%>
<%= link_to "Delete", appointment, method: :delete, class: "delete" %>
<hr>
<%end%>

<h2> <%= link_to "All Doctors", doctors_path %> </h2>
<h2> Specialty: <%= @doctor.specialty %> </h2>
<%= link_to "Edit #{@doctor.name}", edit_doctor_path(@doctor)  %>
<%= link_to "Fire #{@doctor.name}", doctor_path(@doctor),
  method: :delete, data: {confirm: "Give unemployment?"}  %>
