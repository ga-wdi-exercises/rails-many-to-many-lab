<h1>Appointments for <%= @patient.name %></h1>

<% @patient.appointments.each do |appointment| %>
 <strong><%= appointment.patient.name %></strong>
 <p>Time: <%= appointment.time %></p>
<%end %>

<h2> <%= link_to "All Patients", patients_path %> </h2>

<div class="">
  Age: <%= @patient.age %>,&nbsp;&nbsp;
  Gender: <%= @patient.gender  %>
</div>

<%= link_to "Edit #{@patient.name}", edit_patient_path(@patient) %>
<%= link_to "Remove #{@patient.name}", patient_path(@patient),
  method: :delete, data: {confirm: "Remove from practice?"}  %>
