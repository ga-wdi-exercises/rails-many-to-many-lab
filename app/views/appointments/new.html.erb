<h1>Create New Appointment</h1>
<%= form_for @appointment do |f| %>
  <%= f.label :date %>
  <%= f.text_field :date %>
<br><br>
  <%= f.label :time %>
  <%= f.text_field :time %>
<br><br>
  <%= f.label :notes %>
  <%= f.text_field :notes %>
<br><br>
Doctor: <%= select_tag :doctor_id, options_for_select(@doctors)%>
<br><br>

Patient: <%= select_tag :patient_id, options_for_select(@patients)%>
<br><br>
  <%= f.submit%>
<% end %>
