<%= form_for @appointment do |f| %>
  <%= f.label :datetime %>
  <%= f.text_field :datetime %>
  <%= f.label :doctor_id %>
  <%= f.select :doctor_id, Doctor.all.collect { |doctor| [doctor.name, doctor.id]}
      %>
  <%= f.label :patient_id %>
  <%= f.select :patient_id, Patient.all.collect { |patient| [patient.name, patient.id]}
       %>  <%= f.submit %>
<% end %>
