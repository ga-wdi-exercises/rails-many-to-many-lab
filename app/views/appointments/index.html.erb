<h2>Appointments</h2>
<h3> <%= link_to "Add Appointment", new_appointment_path %> | <%= link_to "All Patients", patients_path %> | <%= link_to "All Doctors", doctors_path %> </h3>

<% @appointments.each do |appointment| %>
  <p>Patient: <%= appointment.patient.name %></p>
  <p>Doctor: <%= appointment.doctor.name %></p>
  <p>Date: <%= appointment.appointment_date %></p>
  <p>Time: <%= appointment.appointment_time %></p>
  <p><%= link_to "[Edit]", edit_appointment_path(appointment) %>
  <%= link_to "[Delete]", appointment_path(appointment),
      method: :delete, data: { confirm: "Delete Appointment?"} %><p>
  <hr></hr>

<% end %>
